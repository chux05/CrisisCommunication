using CrisisCommunication.Shared;

@page "/healthstatus"
@inject HttpClient httpClient

<style>
    .wrapper {
        width: 100%;
        height: 100%;
        background-color: lightblue;
    }

    .page-title {
        width: 100%;
        height: 20%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: lightpink;
        font-size: 30px;
        color: red;
    }

    .card-container {
        width: 100%;
        height: 50%;
        margin-top: 200px;
        background-color: grey;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    .my-card {
        width: 200px;
        height: 200px;
        border-radius: 10px;
        background-color: green;
        color: white;
        font-size: 20px;
        display: flex;
        justify-content: center;
    }
</style>

<div class="wrapper">
    <div class="page-title">
        Please indicate your health status
    </div>
    <div class="card-container">
        <div class="my-card" @onclick="AddNoSymptoms">
            No symptoms
        </div>
        <div class="my-card">
            Flu symptoms
        </div>
        <div class="my-card">
            Covid symptoms
        </div>
        <div class="my-card">
            Tested positive
        </div>
        <div class="my-card">
            Tested negative
        </div>
    </div>
</div>

